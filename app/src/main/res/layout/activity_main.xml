<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:background="#ffff00"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="10"
            android:background="#00EAFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/panel_IMG_heart1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_heart"
                />
            <ImageView
                android:id="@+id/panel_IMG_heart2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_heart"
                />
            <ImageView
                android:id="@+id/panel_IMG_heart3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_heart"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="10"
            android:background="#88F806"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="10"
            android:background="#00EAFF"
            android:orientation="horizontal"></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="10"
            android:background="#88F806"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="10"
            android:background="#00EAFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/panel_IMG_left_direction"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/left_direction" />

            <ImageView
                android:id="@+id/panel_IMG_right_direction"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/right_direction" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>